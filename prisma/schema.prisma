generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Auth
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  nameChangedAt DateTime?
  profileImage  String?
  role          String    @default("user")
  sessions      Session[]
  comments      Comment[]
  createdAt     DateTime  @default(now())
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Projects
model Project {
  id               String         @id @default(cuid())
  title            String
  slug             String         @unique
  category         String         @default("hobby") // "hobby" or "work"
  sortOrder        Int            @default(0)
  description      String?
  content          String?
  lessonsLearned   Json           @default("[]") // Array of lesson strings
  // New fields
  status           String         @default("planning") // planning, in_progress, completed, on_hold
  estimatedBudget  Float?
  startDate        DateTime?
  completionDate   DateTime?
  privateNotes     String?
  difficulty       Int?           // 1-5 rating
  tags             Json           @default("[]") // Array of skill/tag strings
  // Before/After comparison settings
  beforeImageIndex Int?
  afterImageIndex  Int?
  compareMode      String?  @default("toggle") // "toggle" or "slider"
  // Relations
  images          ProjectImage[]
  comments        Comment[]
  receipts        Receipt[]
  timeEntries     TimeEntry[]
  materials       MaterialItem[]
  links           ProjectLink[]
  published       Boolean        @default(false)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([category])
  @@index([status])
}

model TimeEntry {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  hours       Float
  description String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([projectId])
}

model MaterialItem {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  name      String
  acquired  Boolean  @default(false)
  quantity  Int?
  notes     String?
  createdAt DateTime @default(now())

  @@index([projectId])
}

model ProjectLink {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title     String
  url       String
  createdAt DateTime @default(now())

  @@index([projectId])
}

model Receipt {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  imageUrl    String
  amount      Float
  category    String   @default("material") // "tool" or "material"
  description String?
  createdAt   DateTime @default(now())

  @@index([projectId])
}

model ProjectImage {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  url       String
  alt       String?
  sortOrder Int     @default(0)
  type      String  @default("image") // "image" or "video"
}

// Analytics
model AnalyticsEvent {
  id        String   @id @default(cuid())
  event     String   // 'page_view', 'resume_download', 'project_click'
  page      String?
  visitorId String
  sessionId String?
  ip        String?
  referrer  String?
  userAgent String?
  device    String?  // 'mobile', 'tablet', 'desktop'
  browser   String?
  country   String?
  createdAt DateTime @default(now())

  @@index([event])
  @@index([visitorId])
  @@index([sessionId])
  @@index([createdAt])
  @@index([page])
  @@index([ip])
}

// Contact Submissions
model ContactSubmission {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  message     String
  read        Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([read])
  @@index([createdAt])
}

// Comments
model Comment {
  id        String   @id @default(cuid())
  content   String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([authorId])
}
